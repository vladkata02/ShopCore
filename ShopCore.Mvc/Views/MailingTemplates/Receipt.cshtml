@using ShopCore.Services

@model List<NinjaDTO>

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="header-content">
        <p>Please find the below list of Ninjas currently available.</p>
    </div>
    <div>
        <table class="table-bordered">
            <tr class="thead">
                <th>Id</th>
                <th>Name</th>
                <th>Bio</th>
                <th>Class</th>
                <th>ColorCode</th>
                <th>AddedOn</th>
                <th>UpdatedOn</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Bio</td>
                    <td>@item.Class</td>
                    <td>@item.ColorCode</td>
                    <td>@item.AddedOn</td>
                    <td>@item.UpdatedOn</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>