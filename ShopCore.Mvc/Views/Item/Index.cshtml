@model ShopCore.Services.ViewModel.ItemViewModel
@{
    ViewBag.Title = "Index";

}

<h2>Add an item</h2>

<script>
    function ResetItem() {
        $("#CategoryId").val("1");
        document.getElementById('FormForAddingItems').reset();
        $("[asp-for='ItemName']").val("");
        $("#ItemBrand").val("");
        $("#Description").val("");
        $("#ItemPrice").val("");
        $("#ImagePath").val("");
    }
</script>
<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Item" asp-action="Index">
        <div class="col-md-4">
            <div class="form-group">
                Category :
                @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.CategorySelectListItem, "Value", "Text"),
       new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                Item Code :
                <input asp-for="ItemCode" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                Item Name :
                <input asp-for="ItemName" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                Item Brand :
                <input asp-for="ItemBrand" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                Description :
                <input asp-for="Description" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                Item Price :
                <input asp-for="ItemPrice" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                Item Image :
                <input class="form-control" name="files" type="file" />
            </div>
        </div>

        <div>
            <button class="btn btn-primary" asp-controller="Item" asp-action="Index">Save</button>
            <input class="btn btn-danger" type="reset" value="Reset" />
        </div>
    </form>
</div>


