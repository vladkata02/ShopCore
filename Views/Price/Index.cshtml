@model ShopCore.ViewModel.PriceEditorViewModel
@{
    ViewBag.Title = "Index";

}

<h2>Edit price</h2>
<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Item" asp-action="Index">
        <div class="col-md-4">
            <div class="form-group">
                Current Price of this item:
                <input asp-for="ItemPrice" />
            </div>
            <div class="form-group">
                New Item Price :
                <input asp-for="CurrentPrice" />
            </div>
        </div>

        <div>
            <button class="btn btn-primary" asp-controller="Item" asp-action="Index">Save</button>
        </div>
    </form>
</div>


